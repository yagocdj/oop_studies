package oop_classes;

import java.util.Random;

public class HelloWorld {
	public static void main(String[] args) {
		System.out.println("Ola para todos");
		
		// O programa é uma classe que tem o metodo main
		// Strings não aceitam aspas simples
		// String[] args -> array de strings como argumento
		// System -> uma das classe (uma das principais)
		// jar -> mesma coisa que rar
		// Syso -> tecle Alt + Space para um snippet de código
		// new -> operador para criar um objeto
		// classes que estão em java.lang não precisam ser importadas
		// Ctrl + Shift + o para os imports necessários
		
		System.out.println(System.getProperty("os.name"));
		System.out.println(System.getProperty("user.name"));
		System.out.println(new Random().nextInt(100));
	}
}
